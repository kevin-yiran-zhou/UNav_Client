    <TextView
        android:id="@+id/placeholder_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/placeholder"
        android:layout_alignStart="@id/textView3"
        android:textStyle="bold"
        android:shadowColor="#ff0000"
        android:textColor="#ffffff"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:text="Alert distance:  short       normal       long" />

    <com.google.android.material.slider.Slider
        android:id="@+id/placeholder"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/instruction_mode"
        android:layout_marginStart="130dp"
        android:valueFrom="0"
        android:valueTo="10"
        android:value="5" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/start_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/placeholder_label"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:shadowColor="#ff0000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10"
        android:textSize="30dp"
        android:text="Connect"
        android:layout_centerInParent="true"
        app:buttonColor="#ff9722"
        app:unpressedGlowSize="20dp"
        app:pressedGlowSize="25dp"
        app:glowColor="#ff9722"
        app:cornerRadius="50dp"/>

